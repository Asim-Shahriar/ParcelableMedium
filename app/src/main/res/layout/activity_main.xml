<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/Ed_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter your name here"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="96dp"
        android:layout_marginTop="62dp" />

    <EditText
        android:id="@+id/Ed_Age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter your age here"
        android:layout_alignStart="@+id/Ed_Name"
        android:layout_below="@+id/Ed_Name"
        android:layout_marginTop="70dp"
        />

     <EditText
         android:id="@+id/Ed_RollNo"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:hint="Enter your roll no here"
         android:layout_below="@+id/Ed_Age"
         android:layout_alignStart="@+id/Ed_Age"
         android:layout_marginTop="84dp"
       />

    <Button
        android:id="@+id/E_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Ed_Age"
        android:layout_below="@+id/Ed_RollNo"
        android:layout_marginEnd="33dp"
        android:layout_marginTop="33dp"
        android:text="Send" />

</RelativeLayout>